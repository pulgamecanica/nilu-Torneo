<%= form_with(model: match) do |form| %>
  <% if match.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(match.errors.count, "error") %> prohibited this match from being saved:</h2>

      <ul>
        <% match.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :date %>
    <%= form.date_select :date, class: "form-control" %>
  </div>

  <div class="field">
    <%= form.label :category_id %>
    <% if @match.category.present? %>
      <%= form.select(:category_id, options_for_select(@select_categories, @match.category.id), {}, {class: "form-controll m-3"}) %> 
    <% else %>
      <%= form.select(:category_id, options_for_select(@select_categories), {}, {class: "form-controll m-3"}) %> 
    <% end %>
  </div>

  <div class="field">
    <%= form.label :player_1_id %>
    <%= form.select(:player_1_id, options_for_select(@select_players, @match.player_1_id), {}, {class: "form-controll m-3"}) %> 
  </div>

  <div class="field">
    <%= form.label :player_2_id %>
    <%= form.select(:player_2_id, options_for_select(@select_players, @match.player_2_id), {}, {class: "form-controll m-3"}) %> 
  </div>

  <div class="field">
    <%= form.label :winner_id %>(Optional)
      <% if @match.winner.present? %>
        <%= form.select(:winner_id, options_for_select(@select_players, @match.winner_id ), {:include_blank => ' '}, {class: "form-controll m-3"}) %> 
      <% else %>
        <%= form.select(:winner_id, options_for_select(@select_players), {:include_blank => ''}, {class: "form-controll m-3"}) %> 
      <% end %>


  </div>

  <div class="field">
    <%= form.label :round %>
    <%= form.number_field :round, class: "form-control" %>
  </div>

  <div class="actions">
    <%= form.submit class: "btn btn-primary btn-block mt-2" %>
  </div>
<% end %>
